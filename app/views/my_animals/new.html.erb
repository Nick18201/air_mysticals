<%= render "shared/navbar" %>

<div class="container p-3 mx-auto my-4" style="background-image: url(<%= asset_url('foret.jpg') %>); background-size: cover;background-position: bottom; heigth: 100vh;">
  <h2 class= "text-center text-white p-3">Ajoutez votre Mystical</h2>
<%# <img src="assets/images/foret.jpg" class="img-fluid" alt="Responsive image"> %>
  <div class="container w-75 p-3">
    <%= simple_form_for(@my_animal, url: my_animals_path) do |f| %>
    <div class="form-row text-white ">
      <div class= "col">
        <%= f.input :name, label: "Son petit nom"%>
      </div>
      <div class= "col">
        <%= f.input :age %>
      </div>
    </div>
    <div class="text-white">
      <%= f.input :description %>
      <%= f.input :location, label: "Localisation"  %>
      <%= f.input :price_per_day, label:"Prix par jour" %>
    </div>
    <div class="form-inline mt-4  justify-content-between text-white">
      <%= f.input :photo, as: :file%>
      <%= f.submit "Ajoutez votre Mystical", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
