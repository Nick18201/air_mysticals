<%= render "shared/navbar" %>
<div class="banner">
  <div class="container">
    <h1 class= "home_title">Location d' animaux fantastiques</h1>
    <p class="tagline text-white"> Pour mettre des pailletes dans son quotidien</p>
  </div>
  <div class="search_bar">
  <%= form_tag animals_path, class: "form-inline search_bar_form", method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control mr-2",
      placeholder: "Trouvez votre mystical à côté de chez vous"
    %>
    <%= submit_tag "Search", class: "btn btn-primary text-white" %>
  <% end %>
  </div>
</div>

<div class="container_body">

  <h1 class="text-warning text-center mb-5"> Comment ça fonctionne ?</h1>
  <div class="container_demo">
    <div class="demo_left">
      <i class="desktop_1"></i>
      <%= image_tag "demo_2.png", class: "demo_showcase"%>
      <p class= "demo_text"><strong>Ajoutez</strong> vos propres Mysticals pour les louer à votre tour.</p>
      <%= image_tag "demo_3.png", class: "demo_showcase"%>
    </div>
    <div class="demo_right">
      <p class= "demo_text"><strong>Réservez</strong> nos Mysticals par géolocalisation
      et soumettez votre demande auprès du <strong>loueur partenaire</strong>.</p>
      <%= image_tag "demo_1.png", class: "demo_showcase"%>
      <p class= "demo_text">
      Découvrez votre <strong>dashboard personnel</strong> pour gérer vos réservations et vos locations de <strong>Mysticals</strong>.</p>
    </div>
  </div>
</div>

<div class="pb-3">
  <div class="home_background">
    <div class="rows">
      <div class="col">
        <h1 class= "text-danger align-text-center pl-5 pt-4">Notre sélection de Mysticals prêts à être loués</h1>
        <div class="cards_home ">
          <% @animals.each do |animal| %>
            <%= link_to animal_path(animal), class: "card-animal-linked" do %>
              <div class="card-animal">
                <%= cl_image_tag animal.photo.key, width: 400, crop: :fill %>
                <div class="card-animal-infos">
                  <h3 class="mb-0"><%= animal.name %></h3>
                  <img src="<%= cl_image_path animal.owner.avatar.key, width: 50, crop: :fill %>" class="card-animal-user avatar-bordered" />
                  <p><%= "#{animal.description}" %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class= "d-flex justify-content-center">
  <%= link_to "Découvrir nos Mysticals", animals_path , class:"text-white btn btn-primary w-25 my-5 rounded" %>
  </div>
</div>
