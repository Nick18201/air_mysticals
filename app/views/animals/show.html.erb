<div class="container m-2">
  <%= link_to "retour", animals_path , class:"btn btn-outline-primary mb-2" %>
  <div class= "row d-flex justify-content-between align-items-center ">
    <div class="col-8">
      <%= cl_image_tag @animal.photo.key, crop: :fill %>
    </div>

    <div class=" col-4 d-flex flex-column">
      <div class="card-animal-show">
        <ul class="list-group">
            <p> Petit nom : <%= @animal.name %></p>
            <p> <%= @animal.description %></p>
            <p> <%= @animal.location %></p>
            <p> <%= @animal.age %> ans</p>
            <p> <%= @animal.price_per_day %> € /jour</p>
            <p> Loué(e) par <%= @animal.owner.username %> </p>

        </ul>
      </div>
    </div>
  </div>
</div>
