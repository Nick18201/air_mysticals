
<div class="container_index">
  <div class="row p-5">
    <div class="col">
        <h2 class="text-warning">Nos Mysticals dans la zone séléctionnée</h2>
        <p class= "info_index">Avant de réserver, consultez les restrictions de location liées au COVID-19.</p>
      <div class="cards m-2">
        <% @animals.each do |animal| %>
          <%= link_to animal_path(animal), class:"card-animal-linked" do %>
            <div class="card-animal">
              <%= cl_image_tag animal.photo.key, width: 400, crop: :fill%>
              <div class="card-animal-infos">
                <h3 class="mb-0"><%= animal.name %></h3>
                <img src="<%=cl_image_path animal.owner.avatar.key, width: 50, crop: :fill%>" class="card-animal-user avatar-bordered" />
                <p><%= "#{animal.description}"%></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="search_bar pt-5">
          <%= form_tag animals_path, method: :get do %>
          <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Une autre localisation ?"%>
          <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
  </div>
  </div>
  <div>
  <div id="map"
    style="width: 100%; height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  </div>
</div>
