<h1 class="pt-2 text-center">Voici nos Mysticals!</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <div class="cards m-2">
        <% @animals.each do |animal| %>
          <%= link_to animal_path(animal), class:"card-animal-linked" do %>
            <div class="card-animal">
              <%= cl_image_tag animal.photo.key, width: 400, crop: :fill%>
              <div class="card-animal-infos">
                <h3 class="mb-0"><%= animal.name %></h3>
                <img src="<%=cl_image_path animal.owner.avatar.key, width: 50, crop: :fill%>" class="card-animal-user avatar-bordered" />
                <p class="card-animal-pricing"><%= "#{animal.price_per_day} â‚¬/j"%></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
